# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database (DigitalOcean Managed Database)
# Connection details for your DigitalOcean managed PostgreSQL database
# Format: host=app-XXXXX-do-user-XXXXX-0.f.db.ondigitalocean.com port=25060 sslmode=require
DB_HOST=app-XXXXX-do-user-XXXXX-0.f.db.ondigitalocean.com
DB_PORT=25060
DB_NAME=lectio-db
DB_USERNAME=lectio-db
DB_PASSWORD=your-database-password-here
DB_SSL=true
DB_SYNC=false
DB_AUTO_MIGRATE=true

# Redis (Managed by DigitalOcean)
REDIS_URL=${lectio-redis.DATABASE_URL}

# Authentication
JWT_SECRET=your-strong-jwt-secret-here-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# API Documentation
SWAGGER_ENABLED=true

# DigitalOcean Access Token (for deployment)
DIGITALOCEAN_ACCESS_TOKEN=your-digitalocean-api-token-here