# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database (Managed by DigitalOcean)
# These will be automatically populated from DigitalOcean managed database
DB_HOST=${lectio-db.HOSTNAME}
DB_PORT=${lectio-db.PORT}
DB_NAME=${lectio-db.DATABASE}
DB_USERNAME=${lectio-db.USERNAME}
DB_PASSWORD=${lectio-db.PASSWORD}
DB_SSL=true

# Redis (Managed by DigitalOcean)
REDIS_URL=${lectio-redis.DATABASE_URL}

# Authentication
JWT_SECRET=your-strong-jwt-secret-here-minimum-32-characters
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# API Documentation
SWAGGER_ENABLED=true

# DigitalOcean Access Token (for deployment)
DIGITALOCEAN_ACCESS_TOKEN=your-digitalocean-api-token-here